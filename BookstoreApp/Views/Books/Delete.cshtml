@model BookstoreApp.Models.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-bg">
    <div class="auth-card">
        <h2 class="text-center text-danger">Are you sure?</h2>
        <p class="text-center">You are about to delete the following book:</p>
        <hr />

        <div class="mb-3">
            <label class="form-label"><strong>Title:</strong></label>
            <p>@Model.Title</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Author:</strong></label>
            <p>@Model.Author</p>
        </div>

        <div class="mb-3">
            <label class="form-label"><strong>Price:</strong></label>
            <p>$@Model.Price</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>
