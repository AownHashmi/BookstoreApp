<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookstoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">📚 BookstoreApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex">
                    
                    @if (User?.Identity?.IsAuthenticated ?? false)
{
    <span class="nav-link text-light">Welcome, @User.Identity.Name</span>
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
        <button type="submit" class="btn btn-outline-light ms-2">Logout</button>
    </form>
}
else
{
    <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-light ms-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
}

                
                </div>
            </div>
        </nav>
    </header>

    

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-light py-3">
        <p>&copy; @DateTime.Now.Year - BookstoreApp</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
